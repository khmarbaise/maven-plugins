import java.io.*;

File artifactDir = new File( basedir, "target/repo/org/apache/maven/its/gpg/sadfwp/test/1.0" );

String[] expectedFiles = {
    "test-1.0.jar",
    "test-1.0.jar.asc",
    "test-1.0.pom",
    "test-1.0.pom.asc",
};

for ( String expectedFile : expectedFiles )
{
